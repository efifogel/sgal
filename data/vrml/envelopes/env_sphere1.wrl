#VRML V2.0 utf8
DEF CONFIG Configuration {
  accumulation Accumulation { enabled TRUE }
}
DEF BACKGROUND ColorBackground {
  color 1 1 1 0
  clearStencil TRUE
}
DEF EXAMINE_NAV NavigationInfo { type [ "EXAMINE" "ANY" ] }
DEF TRANSFORMER_NAV NavigationInfo { type [ "TRANSFORM" ] }
DEF SNAP_KEY SingleKeySensor { key "S" }
DEF SNAP Snapshot {
  image Image { }
  fileFormat "jpg"
  quality 98
  sequence FALSE
  dirName "."
  fileName "env_sphere1"
}

Viewpoint {
  type "ORTHOGONAL"
  fieldOfView 3.067
}

Transform {
  # bboxCenter 0 0 0
  # bboxSize 1 1 1
  # rotation -1 0 0 1.5708
  rotation -1 0 0 .7853
  children [
    Transform {
      rotation 0 0 -1 .7853
      children [
	Group {
	  children [
	    DEF SHAPE1 Shape {
	      appearance Appearance {
		material Material {
		  diffuseColor 0.8 0.4 0.4
		  ambientIntensity 0.8
		}
	      }
	      geometry DEF GEOM1 Sphere {
		center -0.866 -0.5 3
		radius 1
		stacks 64
		slices 64
	      }
	    }
	    DEF SHAPE2 Shape {
	      appearance Appearance {
		material Material {
		  diffuseColor 0.4 0.8 0.4
		  ambientIntensity 0.2
		}
	      }
	      geometry DEF GEOM2 Sphere {
		center 0.866 -0.5 3
		radius 1
		stacks 64
		slices 64
	      }
	    }
	    DEF SHAPE3 Shape {
	      appearance Appearance {
		material Material {
		  diffuseColor 0.4 0.4 0.8
		  ambientIntensity 0.2
		}
	      }
	      geometry DEF GEOM3 Sphere {
		center 0 1 3
		radius 1
		stacks 64
		slices 64
	      }
	    }
	   ]
	}
	Shape {
	  appearance Appearance {
	    material Material { }
	  }
	  geometry LowerEnvelopeSphere {
	    vertexRadius 0.1
	    edgeRadius 0.05
	    faceTransparency 0.5
	    surfaces [
		      USE SHAPE1
		      USE SHAPE2
		      USE SHAPE3
		     ]
	  }
	}

    # The axes
    Switch {
      whichChoice 0
      children [
	Transform {
	  scale 0.6 0.6 0.6
	  children [
	    Transform {
	      translation 2.5 0 0
	      rotation 1 0 0 1.5708
	      children [
		Transform {
		  translation 0 0 0
		  children [
		    Shape {
		      appearance DEF TEXT_APP Appearance {
			material Material { diffuseColor 0 0 0 }
		      }
		      geometry Text {
			string "X"
			fontStyle FontStyle { size 0.5 }
		      }
		    }
		   ]
		}
	       ]
	    }
	    Transform {
	      translation 0 2.5 0
	      rotation 1 0 0 1.5708
	      children [
		Transform {
		  translation -0.2 0 0
		  children [
		    Shape {
		      appearance USE TEXT_APP
		      geometry Text {
			string "Y"
			fontStyle FontStyle { size 0.5 }
		      }
		    }
		   ]
		}
	       ]
	    }
	    Transform {
	      translation 0 0 2.5
	      rotation 1 0 0 1.5708
	      children [
		Transform {
		  translation -0.2 0 0
		  children [
		    Shape {
		      appearance USE TEXT_APP
		      geometry Text {
			string "Z"
			fontStyle FontStyle { size 0.5 }
		      }
		    }
		   ]
		}
	       ]
	    }
	    Shape {
	      appearance DEF CS_APP Appearance {
		material Material { diffuseColor 0.5 0.5 0.5 }
	      }
	      geometry Sphere { radius 0.1 }
	    }
	    DEF CS_AXIS Transform {
	      translation 0 1 0
	      children [
		Shape {
		  appearance USE CS_APP
		  geometry DEF CS_CYLINDER Cylinder {
		    radius 0.1
		    set_is_bottom_visible FALSE
		    set_is_top_visible FALSE
		  }
		}
		Transform {
		  translation 0 1.2 0
		  children [
		    Shape {
		      appearance USE CS_APP
		      geometry DEF CS_CONE Cone {
			bottomRadius 0.2
			height 0.4
		      }
		    }
		   ]
		}
	       ]
	    }
	    Transform {
	      rotation 0 0 1 -1.57
	      children [ USE CS_AXIS ]
	    }
	    Transform {
	      rotation 1 0 0 1.57
	      children [ USE CS_AXIS ]
	    }
	   ]
	}
       ]
    }
       ]
    }
   ]
}

ROUTE SNAP_KEY.state TO SNAP.trigger
